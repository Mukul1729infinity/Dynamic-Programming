def lcs(x,y,m,n):
    t=[[0 for i in range(n+1)] for j in range(m+1)]
    for i in range(n+1):
        t[0][i]=0
    for i in range(m+1):
        t[i][0]=0
    
    for i in range(1,m+1):
        for j in range(1,n+1):
            if x[i-1] == y[j-1]:
                t[i][j]=1+ t[i-1][j-1]
            else:
                t[i][j]=max(t[i-1][j],t[i][j-1])
    return t[m][n]
x=input()
y=x[::-1]
m=len(x)
n=len(y)
print(m-lcs(x,y,m,n))
